<EditForm Model="User" OnValidSubmit="OnValidSubmit">
    <div class="form-field mb-3">
        <label>Username:</label>
        <div><InputText @bind-Value="User.Username"></InputText></div>
        <label>Password:</label>
        <div><InputText @bind-Value="User.Password"></InputText></div>
    </div>
    <button type="submit" class="btn btn-success">@TextButton</button>
</EditForm>

@code {
    [Parameter] public User User { get; set; } = new();
    [Parameter] public String TextButton { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
